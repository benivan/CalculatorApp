<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvCalculator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey"
        app:layout_constraintVertical_weight="1"
        android:gravity="center|right"
        android:inputType="textMultiLine"
        android:text="0"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="@null"
        />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@id/tvCalculator"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="1dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAc"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="AC"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="%"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="/"
                android:textSize="20sp"
                android:onClick="operaterEvent"/>

            <Button
                android:id="@+id/btnMultiplay"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:text="*"
                android:textSize="20sp"
                android:onClick="operaterEvent"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="7"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="8"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnNine"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="9"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:text="+"
                android:textSize="20sp"
                android:onClick="operaterEvent"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="4"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="5"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="6"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:text="-"
                android:textSize="20sp"
                android:onClick="operaterEvent"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="1"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="2"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_teal"
                android:text="3"
                android:textSize="20sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/btnAddSub"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:text="+/-"
                android:textSize="20sp"
                android:onClick="numberEvent"/>
        </TableRow>



    </TableLayout>

    <LinearLayout
        android:id="@+id/iLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableLayout"
        android:layout_marginBottom="2dp"
        app:layout_constraintVertical_weight="3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="7"
            android:backgroundTint="@color/blue_teal"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginRight="4dp"
            android:onClick="numberEvent"/>
        <Button
            android:id="@+id/btnDOt"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="7.1"
            android:backgroundTint="@color/blue_teal"
            android:text="."
            android:textSize="20sp"
            android:layout_marginRight="4dp"
            android:onClick="numberEvent"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/teal_200"
            android:text="="
            android:textSize="20sp"
            android:onClick="equalTO"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>